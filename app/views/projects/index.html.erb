<br>
<div class="card">
  <div class="card-body" style="border: 1px solid lightseagreen">
    <p id="notice"><%= notice %></p>

    <h1>Projetos</h1>

    <table class="table table-striped">
      <thead>
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= link_to 'Visualizar', project %></td>
          <td><%= link_to 'Editar', edit_project_path(project) %></td>
          <td><%= link_to 'Remover', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Novo Projeto ', new_project_path, class: 'btn btn-outline-primary' %>
  </div>
</div>